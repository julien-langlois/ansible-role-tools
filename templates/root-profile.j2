# ~/.profile: executed by Bourne-compatible login shells.

if [ "$BASH" ]; then
  if [ -f ~/.bashrc ]; then
    . ~/.bashrc
  fi
fi

mesg n || true

. .alias

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
xterm-color)
    PS1='\[\033[1;{{ default_prompt_color }}m\]{{ remote_hostname }}\[\033[0m\]-\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
    ;;
*)
    PS1='\[\033[1;{{ default_prompt_color }}m\]{{ remote_hostname }}\[\033[0m\]-\u@\h:\w\$ '
    ;;
esac
